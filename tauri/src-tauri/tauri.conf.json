{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "影刀账号管理工具",
  "version": "1.0.0",
  "identifier": "com.yingdao.manager",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "影刀账号管理工具",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/ethan-010203/yingdao/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IERDRjZGMkMwQThCNkE3QTMKUldTanA3YW93UEwyM0VEd3czbW9Vd3F4WVlWRlpHeXdiNVJudWlucHRJTHVjWis5SSthdkM2YWcK"
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": [
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "languages": [
          "SimpChinese"
        ],
        "displayLanguageSelector": false,
        "installMode": "both"
      }
    }
  }
}